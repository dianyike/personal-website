---
// Navbar 組件，包含導航和深色模式切換
---

<nav
  class="bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-700 sticky top-0 z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-xl font-bold text-primary-600 dark:text-primary-400"
        >
          DianYi-KE
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href="/"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            首頁
          </a>
          <a
            href="/about"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            關於我
          </a>
          <a
            href="/portfolio"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            作品集
          </a>
          <a
            href="/notes"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            我的筆記
          </a>
          <a
            href="/recommendations"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            推薦資源
          </a>
          <a
            href="/contact"
            class="nav-link relative text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-m font-medium transition-all duration-300"
          >
            聯絡我
          </a>
        </div>
      </div>

      <!-- Theme Toggle & Mobile Menu Button -->
      <div class="flex items-center space-x-4">
        <!-- Theme Toggle Button -->
        <button
          id="theme-toggle"
          class="p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="切換深色模式"
        >
          <svg
            class="w-5 h-5 hidden dark:block"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              clip-rule="evenodd"></path>
          </svg>
          <svg
            class="w-5 h-5 block dark:hidden"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
            ></path>
          </svg>
        </button>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
          aria-label="開啟主選單"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden">
      <div
        class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200 dark:border-gray-700"
      >
        <a
          href="/"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          首頁
        </a>
        <a
          href="/about"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          關於我
        </a>
        <a
          href="/portfolio"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          作品集
        </a>
        <a
          href="/notes"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          我的筆記
        </a>
        <a
          href="/recommendations"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          推薦資源
        </a>
        <a
          href="/contact"
          class="nav-link relative block text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 px-3 py-2 text-base font-medium transition-all duration-300"
        >
          聯絡我
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // 手機選單切換
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", function () {
      mobileMenu?.classList.toggle("hidden");
    });

    // 主題切換與波浪效果
    const themeToggle = document.getElementById("theme-toggle");
    
    themeToggle?.addEventListener("click", function (e) {
      // 建立波浪元素
      const wave = document.createElement("div");
      wave.className = "theme-wave";
      
      // 設定波浪起始位置
      const button = e.target as HTMLElement;
      const rect = button.closest('button')?.getBoundingClientRect() || button.getBoundingClientRect();
      const x = rect.left + rect.width / 2;
      const y = rect.top + rect.height / 2;
      
      wave.style.left = x + "px";
      wave.style.top = y + "px";
      wave.style.width = "20px";
      wave.style.height = "20px";
      
      document.body.appendChild(wave);
      
      // 觸發動畫
      requestAnimationFrame(() => {
        wave.classList.add("active");
      });
      
      // 切換主題
      setTimeout(() => {
        document.documentElement.classList.toggle("dark");
        localStorage.setItem(
          "theme",
          document.documentElement.classList.contains("dark") ? "dark" : "light"
        );
      }, 200);
      
      // 清理波浪元素
      setTimeout(() => {
        wave.remove();
      }, 600);
    });

    // 載入儲存的主題設定
    const savedTheme = localStorage.getItem("theme");
    if (savedTheme === "dark" || (!savedTheme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
      document.documentElement.classList.add("dark");
    }
  });
</script>
